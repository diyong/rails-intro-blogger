<!DOCTYPE html>
<html>
  <head>
    <title>IntroBlogger</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p class="flash">
    <%= flash.notice %>
  </p>
    <div id="container">
      <div id="content">
        <%= yield %> <br>
        <hr>
        <h6>
          <% if logged_in? %>
            <%= "Logged in as #{current_user.email}" %>
            <%= link_to "(logout)", logout_path, :style => "text-decoration: none" %>
          <% else %>
            <%= link_to "(login)", login_path, :style => "text-decoration: none" %>
          <% end %>
        </h6>
      </div>
    </div>
  </body>

</html>
